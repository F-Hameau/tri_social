<div class="form-wrapper green left">
  <h1>Évènements à venir</h1>
  <p><em><%= @count %> <%= @count > 1 ? 'évènements' : 'évènement'%> à venir</em></p>

  <% @events.where('created_at >= ?', Date.today).each do |event| %>
    <div class="card-link">
      <%= link_to event_path(event) do %>
        <div class="card-container">
          <div class="card-row">
            <h2><%= event.title %></h2>
            <h1 class="icon"><% if event.sport == 'Natation' %>
              🏊‍♂️
            <% elsif event.sport == 'Course à pied' %>
              🏃‍♀️
            <% elsif event.sport == 'Cyclisme' %>
              🚴‍♂️
            <% else %>
              🎽
            <% end %></h1>
          </div>
          <div class="card-row">
            <p><em>Créé par <%= event.user.name %></em></p>
            <div class="card-row">
              <h3>
                <%= event.date.day %> <%= event.date.month %> <%= event.date.year %>
              </h3>
              <h1 class="icon">📅</h1>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
