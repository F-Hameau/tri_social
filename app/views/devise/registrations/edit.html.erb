<div class="form-wrapper red">
  <h2 class="left">Mettre à jour mon compte</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true %>
      <%= f.input :photo, autofocus: true %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "new-password" },
                  placeholder: 'Nouveau mot de passe' %>
      <%= f.input :current_password,
                  required: true,
                  input_html: { autocomplete: "current-password" },
                  placeholder: 'Mot de passe actuel' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre à jour" %>
    </div>
  <% end %>

  <h2 class="left">Pas content ?</h2>
  <br>
  <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Es-tu sûr(e) ?" }, method: :delete %>

  <%= link_to "Retour", root_path %>

</div>

